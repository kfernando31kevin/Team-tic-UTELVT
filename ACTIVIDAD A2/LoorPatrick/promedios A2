#include<iostream>
using namespace std;
int main()
{
     float x,c=0,l=30,ca=0,cr=0;
     do{
            cout<<"Promedio del estudiante: ";
            
			cin>>x;
			
            c=c+1;
            
            if(x>7){
            	
				ca=ca+x;
			}
			else{
				if(x<5){
					cr=cr+x;
	}else{}
	}
	}while(c<l);
	
    cout<<"aprueban: "<<ca<<endl;
    
    cout<<"reprueban: "<<cr<<endl;
    
    
    
    return (0);
    
}
